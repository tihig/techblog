<p id="notice"><%= notice %></p>

<h1>Listing Tags</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
 <%= link_to 'New Tag', new_tag_path, class="btn btn-default" %>
<% end %>
