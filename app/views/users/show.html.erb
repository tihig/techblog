<div class="row">
 <div class="col-md-2">
          
 </div>
 <div class="col-md-6">
<h2><%= @user.username %> </h2>

<!-- admin: status and what has he/she written -->

<table class="table">
  <thead>
    <tr>
      <th>Favorited posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.favs.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @user.admin? %>

<table class="table">
  <thead>
    <tr>
      <th>Written posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.posts.each do |written| %>
      <tr>
        <td><%= link_to written.title, written %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<p> Change profile settings (edit & destroy profile) </p>
<%= link_to 'Edit', url_for([:edit, @user]), class:"btn btn-primary" %>
<%= link_to 'Destroy',@user , method: :delete, data: {confirm: 'Are you sure?' }, class:"btn btn-danger" %>


</div>
</div>
