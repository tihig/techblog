

<form>
 <%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title , placeholder:"Programming" %>
  </div>

  <div class="field">
   <%= f.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :intro %><br>
    <%= f.text_area :intro , placeholder:"Introduction to programming blog" %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body , placeholder:"This is a blog about programming. Programming is fun." %>
  </div>



  <div class="actions">
    <%= f.submit 'Submit', class:"btn btn-primary" %> 
  </div>
 <% end %>
 </form>

