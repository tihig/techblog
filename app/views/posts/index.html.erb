<div class="row">
 <div class="col-md-2">
          
 </div>
 <div class="col-md-6">
   <div class="blog-header">
     <h1 class="blog-title">The TechBlog</h1>
     <p class="lead blog-description">Posts about technology and it-related news, trends etc.</p>
   </div>
     <% if current_user and current_user.admin %>
      <%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
     <% end %>  



    <% @posts.each do |post| %>
     <div class="blog-post">
      <h2><%= link_to post.title, post %></h2>
      <p class="blog-post-meta"><%= post.category.name %></p>
      <p><%= post.intro %></p>
     </div>
    <% end %>



  <ul class="pager">
     <%= will_paginate @posts %>
  </ul>


 <div class="col-md-2">

 </div>

 </div>
</div>



