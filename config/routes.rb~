Rails.application.routes.draw do
  resources :favorites
  resources :favs
  resources :users
  resources :tagships
  resources :tags
  resources :posts do
   put :favorite, on: :member
  end
  resources :categories
  resource :session, only: [:new, :create, :destroy]
 
  root 'posts#index'
  get 'signup', to: 'users#new'
  get 'signin', to: 'sessions#new'
  delete 'signout', to: 'sessions#destroy'
end
